<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/booking_gray_bg"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/bookedVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:text="@string/nethravati_auditorium"
                android:textAllCaps="true"
                android:textColor="#484848"
                android:textSize="20sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/bookedSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/poppins_regular"
                android:text="10:00 - 12:00 IST"
                android:textColor="#9f9f9f"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookedTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingEnd="10dp"
                    android:text="DevHost Valorant tournament in mangalore stadium"
                    android:textAlignment="textStart"
                    android:textColor="#4F4F4F"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/bookedCost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#4F4F4F"
                    android:gravity="center"
                    android:text="â‚¹5000"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/booking_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/booking_purple_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookedDateMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-9dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:text="AUG"
                android:textColor="#dedede"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bookedDateDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:text="20"
                android:textColor="#fff"
                android:textSize="35sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bookedDateYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:text="2023"
                android:textColor="#dedede"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
