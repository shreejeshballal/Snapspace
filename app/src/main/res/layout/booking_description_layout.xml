<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_desc_main"
    android:background="@drawable/booking_description_purple_bg"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="65dp"
            android:layout_height="42dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/main_back_btn_white"
            android:elevation="8dp"
            android:paddingEnd="20dp"
            app:drawableEndCompat="@drawable/back_arrow_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/bookingPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal"
                android:text="Payment Completed"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bookingVenueName"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="35dp"
                android:minLines="2"
                android:paddingHorizontal="5dp"
                android:text="NETHRAVATI AUDITORIUM"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="-2dp"
                android:id="@+id/bookingVenueSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:text="10:00 - 12:00 IST"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="437dp"
        app:cardCornerRadius="30dp"
        android:paddingHorizontal="20dp"
        app:cardElevation="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                app:srcCompat="@drawable/purple_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="UID : "
                    android:textColor="#B0706E6E"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bookingUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1212121212121121221"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="NAME : "
                    android:textColor="#B0706E6E"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bookingUserName"
                    android:layout_width="wrap_content"
                    
                    android:layout_height="wrap_content"
                    android:text="Ramesh"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp">

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="EVENT :"
                        android:textColor="#B0706E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingEventTitle"
                        android:layout_width="209dp"
                        android:layout_height="47dp"
                        android:text="Dev Host Valorant tournament by google"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="COST :"
                        android:textColor="#B0706E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingEventCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs50080"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="COUNT :"
                        android:textColor="#B0706E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingUserCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="FOOD :"
                        android:textColor="#B0706E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="CLEANING :"
                        android:textColor="#B0706E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingCleaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                >


                <Button
                    android:layout_width="0dp"
                    android:id="@+id/bookingCancelButton"
                    android:onClick="cancelBooking"
                    android:background="@drawable/white_btn"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:text="CANCEL">

                </Button>
                <Button
                    android:id="@+id/bookingPayButton"
                    android:layout_width="0dp"
                    android:onClick="payBooking"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/lightpurplebtn"
                                      android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="PAY">

                </Button>
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>